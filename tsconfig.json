{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "incremental": true,
    "strict": true,
    "lib": ["ES2021"],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "target": "ES2021"
  },
  "exclude": ["node_modules", "migrations", "dist"]
}
